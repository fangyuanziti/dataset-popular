/* Oil Spill Header */
/*#index_container { height:840px !important;  }*/
#rtg {
	font:normal 12px Arial, Helvetica, sans-serif;
	height: 95px;
	width: 960px;
	background-image: url('/images/rtg/response_banner_bg.gif') !important;
	background-position: left top;
	background-color: #fffcf5;
	position: relative;
}
#rtg_links {
	text-align:right;
	position: absolute;
	right: 11px;
	top: 10px;
	width: 460px;
	color: #BADEF6;
}
#rtg_site {
	text-align:left;
	position: absolute;
	top: 8px;
	width: 127px;
	color: #FFF;
	height: 21px;
	left: -590px;
}
#rtg_links a {
	font-weight: bold;
	color: #FFF;
	text-decoration: none;
}
#rtg_links a:hover {
	color: #E9F386;
	font-weight: bold;
	text-decoration: none;
}