var cookieDomain='.fifa.com';var baseUrl='http://www.fifa.com';var siteLang='en';var idSplitLen=3;var numWordsComment=100;var commentsPerPage=10;var titlePrefixReverse=true;function updateHPPromo(url,Id) {$j('#' + Id).load(url);}function updateHeaderJson(url,tracking,playerLink) {$j.ajax({url:url,dataType:'json',success:function(data) {if(data) {if(data.pageToRedirect.length>0) {window.location.href=data.pageToRedirect;} else {headerData(data,playerLink);if(tracking!='false') {if(updateHeaderJson.hasOwnProperty('firstCall')) {if(data.live||data.lineup) {wAnalytics.track(fifacom_s.pageName + ':dataupdates');}} else {updateHeaderJson.firstCall=true;}}}}}});}function headerData(liveData,playerLink) {if(liveData.status=='live') {$j("#mh_header").addClass("live");$j("#result").text(liveData.result);var resFinandMinuteHtml='';if(liveData.penaltyh!=''||liveData.penaltya!='') {resFinandMinuteHtml='<span id="minute">' + liveData.minute + '</span><span id="minuteDescr">' + liveData.minuteDesc + ' ' + liveData.penaltyh + ':' + liveData.penaltya + '</span>';} else {resFinandMinuteHtml='<span id="minute">' + liveData.minute + '</span><span id="minuteDescr">' + liveData.minuteDesc + '</span>';}if(liveData.timeOut) {var timeOutId="timeoutHome";var timeOutClass="shome left";var isHomeTeam=(liveData.timeOut[0].isHomeTeam=="true");if(!isHomeTeam) {timeOutId="timeoutAway";timeOutClass="saway right";}resFinandMinuteHtml="<div id=\"timeout\"><ul id=\"" + timeOutId + "\" class=\"" + timeOutClass + "\"><li>" + liveData.timeOut[0].message + "</li></ul></div>";}$j("#resFinandMinute").html(resFinandMinuteHtml);var htmlScoreH='';var htmlScoreA='';if(liveData.lineup=='true') {if(liveData.scorerh[0]||liveData.scorera[0]) {var activeLinkPlayer=playerLink;for (var i=0;i<liveData.scorerh.length;i++) {if(activeLinkPlayer=='true') {htmlScoreH=htmlScoreH + '<li><a href="' + liveData.scorerh[i].PlayerLink + ' ">' + liveData.scorerh[i].ScorerName + '</a></li>';} else {htmlScoreH=htmlScoreH + '<li>' + liveData.scorerh[i].ScorerName + '</li>';}}for (var i=0;i<liveData.scorera.length;i++) {if(activeLinkPlayer=='true') {htmlScoreA=htmlScoreA + '<li><a href="' + liveData.scorera[i].PlayerLink + ' ">' + liveData.scorera[i].ScorerName + '</a></li>';} else {htmlScoreA=htmlScoreA + '<li>' + liveData.scorera[i].ScorerName + '</li>';}}$j("#scorers").addClass("scorers");} else {$j("#scorers").removeClass("scorers");}}$j("#shome").html(htmlScoreH);$j("#saway").html(htmlScoreA);}if(liveData.status!='live') {$j("#mh_header").removeClass("live");if(liveData.officialResult!='') {$j("#resFinandMinute").html('<span>' + liveData.officialResult + '</span>');}}if(liveData.minuteDesc!=" "&&liveData.minuteDesc!="") {$j("#resFinandMinute").html(liveData.minuteDesc)}if(liveData.menu[0]&&liveData.idCup!='520') {var menuItem='';for (var i=0;i<liveData.menu.length;i++) {var classCss='';if(liveData.menu[i].tag=='matchCastFWC') {classCss='mcbtn';} else if(liveData.menu[i].tag=='matchCast') {classCss='mcemiratesbtn';} else {if(i==0) { classCss='first';}else if(i==liveData.menu.length - 1) { classCss='last';}else { classCss='';}}if(liveData.menu[i].tag=='matchCastFWC'||liveData.menu[i].tag=='matchCast') {menuItem=menuItem + '<li class="' + classCss + '"><a href="' + liveData.menu[i].url + '"><span>' + liveData.menu[i].tagTranslate + '</span></a></li>';classCss='';} else {menuItem=menuItem + '<li class="' + classCss + '"><a href="' + liveData.menu[i].url + '">' + liveData.menu[i].tagTranslate + '</a></li>';classCss='';}}if(menuItem!='') {$j("#menuMatch").html(menuItem);currMenuItem('#menuMatch');}}};function updateJsonPlayByPLay(url) {$j.ajax({url:url,dataType:'json',success:function(data) {if(data) {playbyplayDATA(data);}}});};function playbyplayDATA(liveData) {if(liveData.playbyplay) {var lineEvent='';if(liveData.lineup=='true') {if(liveData.playbyplay.length>0) {for (var i=0;i<liveData.playbyplay.length;i++) {var len=liveData.playbyplay[i].event[0].imgEvent.length;var EventImg=liveData.playbyplay[i].event[0].imgEvent.substring(0,len - 1);lineEvent=lineEvent + '<tr><td class="minute">' + liveData.playbyplay[i].event[0].minute + '<span style="display:none;">' + liveData.playbyplay[i].event[0].eventCode + '</span></td><td valign="top"><img alt="" src="/imgml/icons/events/pbp/' + EventImg + '.gif" /><span class="minuteByMinute"><strong>' + liveData.playbyplay[i].event[0].eventComment + '</strong></span></td></tr>';len='';EventImg='';}$j('#eventpbp').html(lineEvent);lineEvent='';}}}}