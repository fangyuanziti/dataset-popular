var cookieDomain='.fifa.com';var baseUrl='http://www.fifa.com';var siteLang='en';var idSplitLen=3;var numWordsComment=100;var commentsPerPage=10;var titlePrefixReverse=true;var newsReader={tabs:[]  // actual data,duration:300 // duration of animation (msec),delay:7000 // delay between animations (msec),nCount:0  // number of news,nCurrent:0 // current news,hoverTarget:-1 // next news (selected by hover),animating:false,nWidth:0  // width of a sigle news (in the filmstrip),pointer:{},timer:undefined,currentTab:0 // current selected tab,tracking:false,baseTabsClass:"" // base class of tab strip,init:function(nrId,tabs,tracking) {newsReader.tabs=tabs;var i;for (i=0;i<newsReader.tabs.length;i++) {newsReader.tabs[i].titleSelected=newsReader.tabs[i].titleSelected||newsReader.tabs[i].title;newsReader.tabs[i].title="<a><span>" + newsReader.tabs[i].title + "</span></a>"if(newsReader.tabs[i].moreUrl!="") {newsReader.tabs[i].titleSelected="<a href='" + newsReader.tabs[i].moreUrl + "'><span>" + newsReader.tabs[i].titleSelected + "</span></a>"} else {newsReader.tabs[i].titleSelected="<a><span>" + newsReader.tabs[i].titleSelected + "</span></a>"}}newsReader.nr=$j("#" + nrId);newsReader.nr.find("#nrWrapper").append("<div id='nrPointer'></div>");newsReader.pointer=newsReader.nr.find("#nrPointer");newsReader.tabs[0].content=newsReader.nr.find("#nrDetailContainer").html();newsReader.baseTabsClass=$j("#nrTabs").attr("class");newsReader.tracking=tracking ? true:false;if(tabs.length>1) {$j("#nrTabs li").each(function(index) {$j(this).click(function() {return function(i) {if(newsReader.tabs[i].js) {eval(newsReader.tabs[i].js);}if(newsReader.tracking) {newsReader.trackTab(i);}newsReader.showTab(i);} (index);});});}newsReader.showTab(0);},getTabById:function(tabId) {var i;for (i=0;i<newsReader.tabs.length;i++)if(newsReader.tabs[i].id==tabId) return i;return undefined;},showTab:function(tab) {if(typeof tab==="string") {tab=newsReader.getTabById(tab);}if(tab==0||newsReader.tabs[tab].url) {if(typeof newsReader.tabs[tab].content==="undefined") {$j.get(newsReader.tabs[tab].url,function(data) {$j(data).find(".nrPanel");newsReader.tabs[tab].content=$j(data).html();if(newsReader.tracking) {newsReader.setTracking(tab);}newsReader.showTab(tab);});} else {newsReader.stopTimer();newsReader.hoverTarget=-1;newsReader.animating=false;newsReader.nr.find("#nrDetailContainer").html(newsReader.tabs[tab].content);newsReader.nr.find(".nrPanelOverlay").append("<div class='nrOverlay'></div>");newsReader.nr.find("#nrTabs li").removeClass("before selectedBefore selected selectedAfter");newsReader.nr.find("#nrTabs li:lt(" + (tab - 1) + ")").addClass("before");newsReader.nr.find("#nrTabs li:eq(" + (tab - 1) + ")").addClass("selectedBefore");newsReader.nr.find("#nrTabs li:eq(" + tab + ")").addClass("selected");newsReader.nr.find("#nrTabs li:eq(" + (tab + 1) + ")").addClass("selectedAfter");newsReader.nCount=newsReader.nr.find(".nrFilmStrip li").size();newsReader.nWidth=newsReader.nr.find(".nrFilmStrip").width() / newsReader.nCount;newsReader.nr.find(".nrFilmStrip li").css("width",newsReader.nWidth + "px");newsReader.pointer.css("width",newsReader.nWidth + "px");newsReader.nr.find(".nrFilmStrip li").each(function(i) {$j(this).hover(function() {newsReader.hover(i);});if($j("a",this).size()>0) {$j(this).click(function() {location.href=$j("a",this).attr("href");});}});if(newsReader.tracking) {newsReader.setTracking(tab);}newsReader.pointer.css("left",newsReader.nr.find(".nrFilmStrip li:first").position().left + "px");$j("#nrTabs li:eq(" + newsReader.currentTab + ")").html(newsReader.tabs[newsReader.currentTab].title);$j("#nrTabs li:eq(" + tab + ")").html(newsReader.tabs[tab].titleSelected);newsReader.currentTab=tab;newsReader.nr.find(".nrPanel:gt(0)").hide();newsReader.nCurrent=0;newsReader.startTimer();}}},hover:function(target) {newsReader.hoverTarget=target;if(!newsReader.animating) {newsReader.stopTimer();newsReader.beginAnimation(target);}},beginAnimation:function(target) {if(target!=newsReader.nCurrent) {newsReader.animating=true;var targetL=newsReader.nr.find(".nrFilmStrip li:eq(" + target + ")").position().left;newsReader.pointer.animate({ left:targetL },newsReader.duration,function() { newsReader.animationEnd(target);});newsReader.nr.find(".nrPanel:eq(" + newsReader.nCurrent + ")").css("z-index","100").show().fadeOut(newsReader.duration - 10);newsReader.nr.find(".nrPanel:eq(" + target + ")").css("z-index","50").show();} else {newsReader.startTimer();}},animationEnd:function(target) {newsReader.animating=false;newsReader.nCurrent=target;newsReader.nr.find(".nrPanel:eq(" + newsReader.nCurrent + ")").show();var newTarget=newsReader.hoverTarget;if(newTarget>=0) {newsReader.hoverTarget=-1;newsReader.beginAnimation(newTarget);} else {newsReader.startTimer();}},startTimer:function() {clearTimeout(newsReader.timer);newsReader.timer=setTimeout(newsReader.next,newsReader.delay);},stopTimer:function() {clearTimeout(newsReader.timer);},next:function() {newsReader.beginAnimation((newsReader.nCurrent + 1) % newsReader.nCount);},stop:function() {newsReader.stopTimer();newsReader.nr.find(".nrFilmStrip li").unbind("mouseenter mouseleave");},trackTab:function(tab) {var trackId=newsReader.tabs[tab].id.substring(6);wAnalytics.onHPTop("newsreader - " + trackId + " - tab " + trackId);},setTracking:function(tab) {var trackId=newsReader.tabs[tab].id.substring(6);var val="newsreader - " + trackId;$j(".nrPanel>a").click(function() { wAnalytics.onHPTop(val + " - picture");});$j(".nrPanelOverlay h2 a,.nrPanelOverlay .summary a").click(function() { wAnalytics.onHPTop(val + " - caption");});$j(".nrPanelOverlay .related a").click(function() { wAnalytics.onHPTop(val + " - related items");});$j("#nrDetailContainer ul.nrFilmStrip li").each(function(index) {var tabIndex=index + 1;$j(this).click(function() {return function(i) {wAnalytics.onHPTop(val + " - box " + i);} (tabIndex);});});}}