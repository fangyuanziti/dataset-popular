/* layout pages css only */

/* mini panels */
#maincol .hldMiniPnl .pnl h6 {background:#F6F6F6 url('../img/bg/bxhd_bg234.jpg') no-repeat;} 
#maincol .hldMiniPnl .pnl {width:234px;}

/* large teaser panel */
#lhdBgLgtsr {padding-bottom:10px; background: url('../img/bg/lgtsrbg_btm.gif') bottom left no-repeat;}
#bgLgtsr {background: url('../img/bg/lgtsrbg_hdbase.gif') repeat-y;}


#bgLgtsr .hldLgtsr {width:242px;} 
.lhdlgtsrChnBG {padding-bottom:10px; background: url('../img/bg/lgtsrbg_topcvr.gif') repeat-y;} /* to cover the light blue bg */
.lgtsrChn {background:#6fb1cd url('../img/bg/lgtsr_titlebg_end.jpg') no-repeat right bottom;}
.lgtsrChn p {margin:5px 20px 5px 10px;}
.lgtsrChn a {color:#fff;}	

.hldLgtsrCntnt {padding:0 10px; }
.lgtsrImg {height:168px; z-index:1;} /* lgtsrImg, lgtsrTransbg and lgtsrHd floated to avoid strap text shifting up/down when teaser header is 1 or 2 lines */
.lgtsrTransbg {min-height:54px; height:auto !important; height:54px; background: #4394B9; z-index:2;} /* heights required for ie6 fix */
.lgtsrTransbg .lgtsrHd  {margin-top:10px; margin-bottom:0; padding:0; z-index:3;}
.lgtsrHd {margin-top:5px; margin-bottom:5px; padding:0 10px; z-index:3;}
.lgtsrHd h2 a {color:#fff; display:block;} /* makes the hdg area clickable */
.lgtsrHd h2 a:hover { color:#fff; } 
.lgtsrStrp { min-height:70px; }
.lgtsrStrp p { padding:5px 10px 10px 10px; }
.lgtsrStrp, .lgtsrImg { background:#a4ccde; }
.hldLgtsrCntnt img, .hldLgtsrCntnt, .lgtsrTransbg {width:220px;}


/* 2x1 teaser in maincol, uses same classes as large teasers */
#lhdBgBxtsr {margin-bottom:30px; padding-bottom:10px; background: url('../img/bg/boxtsr2x1_btm.gif') bottom left no-repeat;}
#bgBxtsr {background: url('../img/bg/boxtsr2x1_bgtile.gif') repeat-y;}
#bgBxtsr .hldBxtsr {width:240px;} 

/* 2x2 featured jobs */
#featjob div.floatclear {padding-left:10px;}
#featjob div.floatclear .floatleft {width:120px; height:60px; margin:0 15px 10px 0; background:#ccc;}



/* overwriting h3 size*/
#maincol .hldPnl .pnlTxt h3 {font-size:1.3em;}


/* explore further panel */
#pgft {margin-top:40px;}
#pnlxplore div.floatleft {width:140px; padding:8px 10px 15px 10px;}

#pnlxplore {background:url('../img/bg/bgxp.gif') repeat-y;}
#pnlsxplore {background:url('../img/bg/bgxp_ft.gif') bottom no-repeat;}
#pnlxplore div.floatleft p.infotext {color:#666; margin-bottom:5px;}
#pnlxplore div.floatleft h3 {margin-bottom:5px;}
#pnlxplore div.floatleft h5 {margin:5px 0;}
#pnlxplore p.lowlight a {color:#a7a7a7;}


/* topic guide panel */
#lhdOuterNameBnr {margin-bottom:20px;} /* only when namebanner and headerbanner files display together */
#lhdNameBnr {padding-bottom:8px; background:url('../img/bg/tpguide_bse.jpg') bottom no-repeat;}
#nameBnr {padding:15px; border-left:8px solid #9CCFE2; border-right:8px solid #9CCFE2; background:url('../img/bg/tpguide_grad.jpg') repeat-y;}
#nameBnr h4 {color:white;}

/* rssfeed panel */
.rsspnl .pnlTxt h3 {font-size:1em;font-weight:normal;margin-bottom:20px;width:250px;}
.rsspnl .pnlTxt h3.marker {padding-left:20px;}
.rsspnl .pnlTxt h3, .rsspnl .pnlTxt h3 a, .rsspnl .pnlTxt .rsspnldisc, .rsspnl .pnlTxt .rsspnldisc a {color:#666666;}
.rsspnl .pnlTxt h3 a:hover, .rsspnl .pnlTxt .rsspnldisc a:hover {text-decoration:underline;}
.rsspnl .rsspnlimg {text-align:center;margin-top:5px;padding:10px;border-top:1px solid #ccc;}
.rsspnl .rsspnldisc {text-align:center;}
