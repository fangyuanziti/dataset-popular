/* BEGIN Layouts */

#home .baseLayout {
  background: url(/images/layout/vertical_rule.gif) repeat-y 91px;
}

#home .baseLayoutBelowFold {
  background: url(/images/layout/baselayout_belowfold.gif) top left repeat-y;
}

#home .spanABWell {
  background-image: none;
}

#home .spanNavABC {
  background: #FAF9DC;
}

#home .spanAB {
  background: url(/images/layout/vertical_rule.gif) repeat-y 526px;
} 

.spanNavAB {
  width: 618px;
  border-bottom: 1px solid #D3D3D3;
}

#home .spanAB,
#home .spanABBelowFold {
  width: 878px;
}

#home .spanABWell .spanABBelowFold {
  width: 970px;
  background: url(/images/layout/vertical_rule.gif) repeat-y 617px 50%;
  padding: 0;
}

#home .wideA {
  background: url(/images/layout/vertical_rule.gif) repeat-y 352px;
}

#home .wideB {
  background: url(/images/layout/vertical_rule.gif) repeat-y 178px;
}

#home .subColumn-2 {
  background: url(/images/layout/vertical_rule.gif) repeat-y 173px;
}   

/* END Layouts*/

/* BEGIN Columns */

#home .abcColumn {
  width: 878px;
  background: #fff;
} 

#home .subColumn-2 .column,
#home .subColumn-3 .column,
#home .wideA .bColumn,
#home .wideB .aColumn {
  width: 173px;
}

#home .wideB .aColumn,
#home .abColumn .subColumn-3 div.first,
#home .abColumn .subColumn-3 .firstColumn {
  width: 178px;
}

#home .cColumn .subColumn-2 div.last,
#home .cColumn .subColumn-2 .lastColumn {
  width: 177px;
}

#home .abColumn .subColumn-3 {
  width: 526px;
}

#home div.opening {
  padding-top: 10px;
}

#home div.closing {
  padding-bottom: 10px;
} 

#home .baseLayout div.last,
#home .baseLayoutBelowFold div.last {
  margin-right: 0;
}

#home .baseLayout .nav,
#home .baseLayoutBelowFold .nav {
  width: 91px;
  margin-right: 1px;
  overflow: hidden;
}

#home .abColumn {
  width: 526px;
  margin-right: 1px;
}

#home .spanABWell .abColumn {
  width: 617px;
}

#home .cColumn {
  width: 351px;
}

#home .wideA .aColumn {
  width: 352px;
}

#home .wideB .bColumn {
  width: 347px;
}

#home .abcColumn div.columnGroup {
  margin-left: 10px;
  margin-right: 9px;
} 

#home .cColumn div.insetH,
#home .cColumn div.columnGroup,
#home .cColumn .subColumn-2 div.last div.insetH,
#home .cColumn .subColumn-2 .lastColumn div.insetH, 
#home .cColumn .subColumn-2 div.last div.columnGroup,
#home .cColumn .subColumn-2 .lastColumn div.columnGroup {
  margin-left: 5px;
  margin-right: 9px;
}

#home .aColumn div.insetH,
#home .abColumn div.insetH,
#home .abColumn div.columnGroup, 
#home .aColumn div.columnGroup,
#home .subColumn-3 div.first .insetH,
#home .subColumn-3 .firstColumn .insetH, 
#home .subColumn-3 div.first .columnGroup,
#home .subColumn-3 .firstColumn .columnGroup {
  margin-right: 5px;
  margin-left: 10px;
}

#home .bColumn div.insetH,
#home .bColumn div.columnGroup,
#home .subColumn-3 .column div.insetH,
#home .subColumn-3 .column div.columnGroup,
#home .subColumn-2 .column div.insetH,
#home .subColumn-2 .column div.columnGroup {
  margin-right: 5px;
  margin-left: 5px;
}

/* END Columns */
